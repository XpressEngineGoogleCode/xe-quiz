<query id="updateAnswer" action="update">
    <tables>
        <table name="quiz_answers" />
    </tables>
    <columns>       
        <column name="question_srl" var="question_srl" filter="number" notnull="notnull"/>
	    <column name="module_srl" var="module_srl" filter="number" notnull="notnull" />
	    <column name="title" var="title" notnull="notnull" />
	    <column name="list_order" var="list_order" filter="number"/>
	    <column name="is_correct" var="is_correct"  />
    </columns>
    <conditions>
        <condition operation="equal" column="answer_srl" var="answer_srl" filter="number" notnull="notnull" />
    </conditions>    
</query>
