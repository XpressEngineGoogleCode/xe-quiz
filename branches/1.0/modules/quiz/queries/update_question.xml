<query id="updateQuestion" action="update">
    <tables>
        <table name="quiz_questions" />
    </tables>
    <columns>       
	    <column name="module_srl" var="module_srl" filter="number" notnull="notnull" />
	    <column name="title" var="title" notnull="notnull" />
	    <column name="list_order" var="list_order" filter="number"/>
	    <column name="description" var="description"  />
	    <column name="hint" var="hint"  />
	    <column name="activation_date" var="activation_date"  />
	    <column name="weight" var="weight" filter="number"  />
	    <column name="answer" var="answer"  />
	    <column name="is_multiple_choice" var="is_multiple_choice"  />
    </columns>
    <conditions>
        <condition operation="equal" column="question_srl" var="question_srl" filter="number" notnull="notnull" />
    </conditions>    
</query>
